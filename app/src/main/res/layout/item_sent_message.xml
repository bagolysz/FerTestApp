<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_half">

    <TextView
        android:id="@+id/text_sent_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/colorPrimary"
        android:maxWidth="@dimen/max_message_width"
        android:padding="@dimen/padding_half"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hi how are you?" />

    <TextView
        android:id="@+id/text_sent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_smaller"
        app:layout_constraintBottom_toBottomOf="@id/text_sent_message"
        app:layout_constraintRight_toLeftOf="@id/text_sent_message"
        tools:text="12:34" />

</android.support.constraint.ConstraintLayout>