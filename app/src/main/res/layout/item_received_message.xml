<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_4dp"
    android:paddingTop="@dimen/padding_half">

    <ImageView
        android:id="@+id/image_received_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/padding_half"
        android:background="@drawable/ic_account_circle_24dp"
        android:contentDescription="@string/avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_half"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/colorPrimaryDark"
        android:maxWidth="@dimen/max_message_width"
        android:padding="@dimen/padding_half"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/image_received_profile"
        app:layout_constraintTop_toBottomOf="@id/text_received_name"
        tools:text="Hi how are you?" />

    <TextView
        android:id="@+id/text_received_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_half"
        android:textSize="@dimen/text_small"
        app:layout_constraintLeft_toRightOf="@id/image_received_profile"
        tools:text="Atti" />

    <TextView
        android:id="@+id/text_received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_smaller"
        app:layout_constraintBottom_toBottomOf="@id/text_received_message"
        app:layout_constraintLeft_toRightOf="@id/text_received_message"
        tools:text="12:34" />

</android.support.constraint.ConstraintLayout>